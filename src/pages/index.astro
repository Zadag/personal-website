---
import "../styles/global.css"
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ProjectCard from '../components/ProjectCard.astro';
---

<Layout title="Kevin Browne">
	<div class="bg-red-400 w-[100%] flex justify-center">
		<h2 class="text-4xl">Under Construction</h2>
	</div>
	<main class="container mx-auto px-4 py-8 flex-grow">
		<Header />

        <section class="mt-12">
            <h2 class="text-3xl font-bold text-center mb-8 text-slate-100">Pet Projects</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <ProjectCard
                    title="Project Alpha"
                    description="A brief description of Project Alpha will go here. Focusing on technologies used and outcomes."
                    projectUrl="#"
                />
                 <ProjectCard
                    title="Project Beta"
                    description="Details about Project Beta, perhaps highlighting unique challenges or features."
                    projectUrl="#"
                />
                 <ProjectCard
                    title="Project Gamma"
                    description="An overview of Project Gamma. You can customize the content for each card."
                    projectUrl="#"
                />
            </div>
        </section>

