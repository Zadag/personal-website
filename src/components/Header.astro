---
import githubIcon from "../assets/github_icon.svg";
import emailIcon from "../assets/email_icon.svg";
import linkedInIcon from "../assets/linkedIn_icon.svg"
const name = "Kevin Browne";
const githubUrl = "https://github.com/zadag";
const linkedinUrl = "https://www.linkedin.com/in/kevin-browne-0335611b4/";
const email = "kbrowne97@gmail.com";
---

<header class="py-8 md:py-8">
  <div class="container mx-auto px-4 text-center">
    <h1 class="text-4xl md:text-5xl font-bold text-cyan-400 mb-4">{name}</h1>
    <nav class="flex justify-center space-x-6 text-slate-300">
      <a href={githubUrl} target="_blank" rel="noopener noreferrer"><img src={githubIcon.src} alt="github" class="h-8 transition delay-50 ease-in-out hover:scale-120"/></a>
      <a href={linkedinUrl} target="_blank" rel="noopener noreferrer"><img src={linkedInIcon.src} alt="linkedIn" class="h-8 transition delay-50 ease-in-out hover:scale-120"/></a>
      <a href={`mailto:${email}`}>      <img src={emailIcon.src} alt="email" class="h-8 transition delay-50 ease-in-out hover:scale-120"/>
      </a>
    </nav>
  </div>
</header>